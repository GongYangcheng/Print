<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    <CheckBox
        android:id="@+id/ck_select"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:focusable="false"
        android:layout_marginHorizontal="@dimen/dp5"
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/tv_order_num"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="1"
        android:gravity="center"
        android:textSize="@dimen/sp15"
        android:paddingHorizontal="@dimen/dp10"
        android:textColor="@color/whiteFFF"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="单号："
                android:gravity="center"
                android:textSize="@dimen/sp15"
                android:textColor="@color/whiteFFF"/>
            <TextView
                android:id="@+id/tv_odd_num"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="232404584"
                android:textSize="@dimen/sp15"
                android:textColor="@color/whiteFFF"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="行完成率："
                android:textSize="@dimen/sp15"
                android:gravity="center"
                android:textColor="@color/whiteFFF"/>
            <TextView
                android:id="@+id/tv_complete_rate"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="26/28"
                android:textSize="@dimen/sp15"
                android:textColor="@color/whiteFFF"/>
        </LinearLayout>
            <TextView
                android:id="@+id/tv_project_time"
                android:layout_width="match_parent"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:text="2018-28-28 23:59"
                android:textSize="@dimen/sp15"
                android:textColor="@color/whiteFFF"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_urgen_sign"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="紧急"
        android:textSize="@dimen/sp15"
        android:layout_marginHorizontal="@dimen/dp15"
        android:gravity="center"
        android:textColor="@color/whiteFFF"/>
    <ImageView
        android:id="@+id/iv_print"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/area_bg"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/dp20"
        android:visibility="visible"/>

</LinearLayout>
