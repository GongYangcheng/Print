<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/gray858585"
    android:orientation="horizontal">
    <CheckBox
        android:id="@+id/ck_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="invisible"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_order_num"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="1"
                android:gravity="center"
                android:textSize="@dimen/sp20"
                android:paddingHorizontal="@dimen/dp20"
                android:textColor="@color/whiteFFF"/>
            <TextView
                android:id="@+id/tv_odd_num"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent"
                android:text="232404584"
                android:gravity="center"
                android:textSize="@dimen/sp20"
                android:textColor="@color/whiteFFF"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_complete_rate"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:text="26/28"
                android:textSize="@dimen/sp20"
                android:gravity="center"
                android:textColor="@color/whiteFFF"/>
            <TextView
                android:id="@+id/tv_urgen_sign"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:text="紧急"
                android:textSize="@dimen/sp20"
                android:gravity="center"
                android:textColor="@color/whiteFFF"/>

            <TextView
                android:id="@+id/tv_project_time"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="2018-28-28"
                android:textSize="@dimen/sp20"
                android:textColor="@color/whiteFFF"/>
        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/iv_print"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/area_bg"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/dp20"
        android:visibility="visible"/>

</LinearLayout>
