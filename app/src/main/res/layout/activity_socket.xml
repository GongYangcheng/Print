<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/ll"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dp10"
            android:text="打印内容"/>
        <EditText
            android:id="@+id/infoEdit"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginHorizontal="@dimen/dp20"
            android:layout_toLeftOf="@+id/send"
            android:ems="10"
            android:minLines="5"
            android:gravity="top"
            android:hint="打印内容"
            android:background="@color/whiteFFF"
            android:inputType="textPersonName" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp10"
        android:paddingHorizontal="@dimen/dp20"
        android:layout_below="@id/ll">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp20"
            android:text="打印张数："/>
        <EditText
            android:id="@+id/edt_print_pice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp20"
            android:ems="5"
            android:gravity="top"
            android:text="1"
            android:paddingHorizontal="@dimen/dp5"
            android:background="@color/whiteFFF"
            android:inputType="number" >
        </EditText>
    </LinearLayout>

    <Button
        android:id="@+id/send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="38dp"
        android:onClick="sendMsg"
        android:text="发送" />
    <Button
        android:id="@+id/send_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="38dp"
        android:onClick="sendMsgTest"
        android:text="发送测试" />



    <TextView
        android:id="@+id/infoText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="25sp"
        android:text=" " />



    <TextView
        android:id="@+id/stateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="状态栏"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/infoText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/infoText1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text=" "
        android:textSize="22sp" />

    <TextView
        android:id="@+id/infoText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/infoText2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text=" "
        android:textSize="19sp" />

    <TextView
        android:id="@+id/infoText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/infoText3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text=" "
        android:textSize="17sp" />

</RelativeLayout>
